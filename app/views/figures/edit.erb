  <%=@figure.name%>
<form method="POST" action="/figures/<%=@figure.id%>">

    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>
        Figure Name:
        <input type="text" id="figure_name" name="figure[name]"></p>
        <p> Landmark Name:
        <input type="text" id="new_landmark" name="landmark[name]"></p>
        <p> Title Name:
        <input type="text" id="new_title" name="title[name]"></p>

        <%Title.all.each do |title|%>
            <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
        <%end%>

        <%Landmark.all.each do |landmark|%>
            <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
        <%end%>

    <input type="submit" id="EditFigure" value="Edit Figure"></form>
